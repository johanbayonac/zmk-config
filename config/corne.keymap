#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// | ESC  |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | TAB  |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  Ñ  |  ´   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  -  | SHFT |
//                    | LWR | RSE | SPC |   | ENT | CTRL | ALT |
                        bindings = <
   &kp ESC   &kp Q  &kp W  &kp E  &kp R  &kp T     &kp Y  &kp U  &kp I      &kp O    &kp P     &kp BSPC
   &kp TAB   &kp A  &kp S  &kp D  &kp F  &kp G     &kp H  &kp J  &kp K      &kp L    &kp SEMI  &kp GRAVE
   &kp LSHFT &kp Z  &kp X  &kp C  &kp V  &kp B     &kp N  &kp M  &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                         &mo 1  &mo 2  &kp SPACE   &kp ENTER &kp LCTRL &kp RALT
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// | BTCLR | mute |     | Home | Pgup | ScrUp |   |  (  |  )  | "|" |     |  UP | DEL |
// | CTRL  | V-   | V+  | End  | Pgdw | ScrDn |   |  {  |  }  |  &  | LFT |     | RGT |
// | SHFT  | Ply  | Psa | stp  | Prev | Next  |   |  [  |  ]  |  %  |     | DWN |     |
//                      | GUI  |      | SPC   |   | ENT |  <  |  >  |
                        bindings = <
   &bt BT_CLR   &kp C_MUTE    &trans        &kp HOME    &kp PG_UP   &kp K_SCROLL_UP        &kp LS(N8)  &kp LS(N9)    &kp GRAVE     &trans    &kp UP    &kp DEL
   &kp LCTRL    &kp C_VOL_DN  &kp C_VOL_UP  &kp END     &kp PG_DN   &kp K_SCROLL_DOWN      &kp SQT     &kp BSLH      &kp CARET     &kp LEFT  &trans    &kp RIGHT
   &kp LSHFT    &kp C_PLAY    &kp C_PAUSE   &kp C_STOP  &kp C_PREV  &kp C_NEXT             &kp LS(SQT) &kp PIPE      &kp LS(N5)    &trans    &kp DOWN  &trans
                                            &kp LGUI    &trans      &kp SPACE              &kp ENTER   &kp LS(COMMA) &kp LS(DOT)
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// | ESC  |  F1  |  F2  |  F3  |  F4  |  F5  |   |  9  |  8  |  7  |  +  |  -  |  ^  |
// | CTRL |  F6  |  F7  |  F8  |  F9  |  F10 |   |  6  |  5  |  4  |  *  |  /  |  %  |
// | SHFT |  F11 |  F12 |      |      |      |   |  3  |  2  |  1  |  .  |  =  | SHFT | // TODO: Fix this row when &mkp is committed
//                      | GUI  |      |  SPC |   | ENT |     |  0  |
                        bindings = <
   &kp ESC    &kp F1   &kp F2   &kp F3  &kp F4  &kp F5      &kp N9  &kp N8  &kp N7  &kp KP_PLUS      &kp KP_MINUS  &kp LS(N6)
   &kp LCTRL  &kp F6   &kp F7   &kp F8  &kp F9  &kp F10     &kp N6  &kp N5  &kp N4  &kp KP_MULTIPLY  &kp KP_DIVIDE &kp LS(N5)
   &kp LSHFT  &kp F11  &kp F12  &trans  &trans  &trans      &kp N3  &kp N2  &kp N1  &kp DOT          &kp LS(N0)    &kp RSHFT
                               &kp LGUI &trans  &kp SPACE   &kp ENTER &trans &kp N0
                        >;
                };
        };
};
