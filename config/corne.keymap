#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// | ESC  |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  Ñ  |  ´   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  -  | SHFT |
//                    | LWR | RSE | SPC |   | ENT | CTRL | ALT |
                        bindings = <
   &kp ESC   &kp Q  &kp W  &kp E  &kp R  &kp T     &kp Y  &kp U  &kp I      &kp O    &kp P     &kp BSPC
   &kp LCTRL &kp A  &kp S  &kp D  &kp F  &kp G     &kp H  &kp J  &kp K      &kp L    &kp SEMI  &kp LBKT
   &kp LSHFT &kp Z  &kp X  &kp C  &kp V  &kp B     &kp N  &kp M  &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                         &mo 1  &mo 2  &kp SPACE   &kp ENTER &kp LCTRL &kp RALT
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |      |     |     |     |     |     |   |  (  |  )  | "|" |     |  UP |     |
// | BTCLR|     |     |     |     |     |   |  {  |  }  |  &  | LFT |     | RGT |
// | SHFT |     |     |     |     |     |   |  [  |  ]  |  %  |     | DWN |     |
//                    | GUI |     | SPC |   | ENT |  <  |  >  |
                        bindings = <
   &trans      &trans  &trans  &trans  &trans  &trans        &kp LS(N8)  &kp LS(N9)    &kp GRAVE     &trans    &kp UP    &trans
   &bt BT_CLR  &trans  &trans  &trans  &trans  &trans        &kp SQT     &kp BSLH      &kp CARET     &kp LEFT  &trans    &kp RIGHT
   &kp LSHFT   &trans  &trans  &trans  &trans  &trans        &kp LS(SQT) &kp PIPE      &kp LS(N5)    &trans    &kp DOWN  &trans
                             &kp LGUI  &trans  &kp SPACE     &kp ENTER   &kp NON_US_BSLH      &kp LS(NON_US_BSLH)
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// | ESC  |  F1  |  F2  |  F3  |  F4  |  F5  |   |  9  |  8  |  7  |  +  |  -  |  ^  |
// | CTRL |  F6  |  F7  |  F8  |  F9  |  F12 |   |  6  |  5  |  4  |  *  |  /  |  %  |
// | SHFT |      |      |      |   "  |   ?  |   |  3  |  2  |  1  |  .  |  ,  |  =  | // TODO: Fix this row when &mkp is committed
//                      | GUI  |      |  SPC |   | ENT |     |  0  |
                        bindings = <
   &kp ESC    &kp F1   &kp F2   &kp F3  &kp F4     &kp F5      &kp N9  &kp N8  &kp N7  &kp KP_PLUS      &kp KP_MINUS  &kp LS(N6)
   &kp LCTRL  &kp F6   &kp F7   &kp F8  &kp F9     &kp F10     &kp N6  &kp N5  &kp N4  &kp KP_MULTIPLY  &kp KP_DIVIDE &kp LS(N5)
   &kp LSHFT  &kp F11  &kp F12  &trans  &kp LS(N2) &kp QMARK   &kp N3  &kp N2  &kp N1  &kp KP_DOT       &kp KP_COMMA  &kp LS(N0)
                                &kp LGUI &trans    &kp SPACE   &kp ENTER &trans &kp N0
                        >;
                };
        };
};
